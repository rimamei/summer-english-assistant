{
  "manifest_version": 3,
  "name": "Summer - AI English Learning Assistant",
  "version": "0.0.1",
  "description": "Learn English Effortlessly - all in one place with Summer.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "src/pages/popup/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "host_permissions": [
    "http://localhost/*"
  ],

  "commands": {
    "execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Summer English Learning popup"
    }
  },
  "trial_tokens": []
}
